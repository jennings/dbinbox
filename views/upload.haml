= haml(:_signin, :layout => false)

.row
  .col-sm-9
    %h1
      %img(class="modal-h-img sprite s_upload_32 modal-h-img" src="/img/icon_spacer.gif")
      Send files to #{@user.display_name}
      %small= "Dropbox/Apps/dbinbox/" + @subfolder

.col-sm-8.col-sm-offset-2.instructions drag your file(s) here to upload

%form.col-sm-12{action: @action, multipart: true, id: 'upload'}
  %table.filelist
    %tbody.files
  %span.btn.btn-primary.fileinput-button#upload_button.float-right
    %i.icon-plus.icon-white
    %span Choose files
    %input(type="file" name="files[]" multiple)
  %span.btn.btn-link#show_send_message.float-right
    %i.icon-edit.icon-black
    %span Send Message
  .col-sm-10.fileupload-progress.fade
    .progress.progress-success.progress-striped.active
    .bar.zero-width
    .progress-extended &nbsp;
  .fileupload-loading

#dropzone
  %span drop your file(s) to upload

.clearfix

%form.form-horizontal.col-sm-12.display-none{action: @action, id: 'send_text', method: 'post'}
  %legend
    %img(class="modal-h-img sprite s_page_white_gray_32 modal-h-img" src="/img/icon_spacer.gif")
    Send text file message
  .control-group
    %label.control-label(for="filename") Filename
    .controls
      .input-append.input-prepend
        .add-on#timestamp=Time.new.strftime("%Y-%m-%d-%H.%M.%S")
        %input(type="text" name="filename" id="filename" placeholder="optional ")
        .add-on .txt
  .control-group
    %label.control-label(for="message") Message
    .controls
      %textarea(name="message")
  %input.btn.btn-primary.float-right(type="submit" value="Send")

.clearfix


